<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainMenu">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="10dp" >

        <TextView
            android:id="@+id/tvQuestion"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:gravity="center"
            android:text="tvQuestion"
            android:textSize="35sp" />

        <Button
            android:id="@+id/bAns0"
            android:layout_width="fill_parent"
            android:layout_height="75dp"
            android:layout_marginVertical="220dp"
            android:text="bAns0"
            android:textSize="20sp" />

        <Button
            android:id="@+id/bAns1"
            android:layout_width="fill_parent"
            android:layout_height="75dp"
            android:layout_marginVertical="300dp"
            android:text="bAns1"
            android:textSize="20sp" />

        <Button
            android:id="@+id/bAns2"
            android:layout_width="fill_parent"
            android:layout_height="75dp"
            android:layout_marginVertical="380dp"
            android:text="bAns2"
            android:textSize="20sp" />

        <Button
            android:id="@+id/bAns3"
            android:layout_width="fill_parent"
            android:layout_height="75dp"
            android:layout_marginVertical="460dp"
            android:text="bAns3"
            android:textSize="20sp" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="50sp"
            android:layout_marginVertical="540sp" >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Question number: "
                android:textSize="25sp" />
            <TextView
                android:id="@+id/tvQuestionNumber"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="25sp"
                android:text="0/0" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="50sp"
            android:layout_marginVertical="600sp" >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Time left: "
                android:textSize="25sp" />
            <TextView
                android:id="@+id/TimeLeft"
                android:layout_width="85sp"
                android:layout_height="match_parent"
                android:textSize="25sp"
                android:text="00 s" />

            <Button
                android:id="@+id/LeaveGame"
                android:layout_width="match_parent"
                android:layout_height="50sp"
                android:textSize="15sp"
                android:text="Leave Game" />

        </LinearLayout>

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>