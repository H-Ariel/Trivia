<Window x:Class="TriviaClient.GameResults"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TriviaClient"
        mc:Ignorable="d"
        Title="Trivia - Game Results" Height="450" Width="800">
    <Grid Background="LightBlue">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Top">
            <WrapPanel>
                <TextBlock Text="Game Results" FontSize="50" FontWeight="Bold"/>
                <Separator Opacity="0" Width="100"/>
                <Button Content="Back to Menu" FontSize="30" Click="BackToMenu" Width="210" Height="45"/>
            </WrapPanel>
            <Separator Opacity="0" Height="30"/>
            <StackPanel x:Name="spGameResults" HorizontalAlignment="Left">
                <TextBlock Text="Not all players finished the game" FontSize="28"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
