<Window x:Class="TriviaClient.JoinRoom"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TriviaClient"
        mc:Ignorable="d"
        Title="Trivia - Join Room" Height="450" Width="800">
    <Grid Background="LightBlue">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Top">
            <WrapPanel>
                <TextBlock Text="Join Room" FontSize="50" FontWeight="Bold"/>
                <Separator Opacity="0" Width="30"/>
                <Button Content="Back" FontSize="30" Click="BackToMenu" Width="140"/>
            </WrapPanel>
            <Separator Opacity="0" Height="20" />
            <StackPanel x:Name="RoomsList" />
        </StackPanel>
    </Grid>
</Window>
