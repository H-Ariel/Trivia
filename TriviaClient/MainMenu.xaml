<Window x:Class="TriviaClient.MainMenu"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TriviaClient"
        mc:Ignorable="d"
        Title="Trivia - Main Menu" Height="450" Width="800">
    <Grid Background="LightBlue">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <Button FontSize="30" Width="250" Height="60" Content="Logout" Click="Logout"/>
            <Separator Opacity="0" Height="5" />
            <Button FontSize="30" Width="250" Height="60" Content="Create Room" Click="CreateRoom"/>
            <Separator Opacity="0" Height="5" />
            <Button FontSize="30" Width="250" Height="60" Content="Join Room" Click="JoinRoom"/>
            <Separator Opacity="0" Height="5" />
            <Button FontSize="30" Width="250" Height="60" Content="Statistics" Click="Statistics"/>
        </StackPanel>
    </Grid>
</Window>
